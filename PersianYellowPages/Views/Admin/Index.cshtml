@model List<BusinessDetailsViewModel>
@{ ViewBag.Title = "Persian Yellow Pages"; }

<h2 class="w-75 p-3 m-3">List of All Businesses - Verified and Unverified</h2>

@foreach (var business in Model)
{
<div class="card w-75 p-3 m-3 zard">
    <div class="card-body">
        <h5 class="card-title">@business.TitleEnglish</h5>
        <p class="card-text">@business.DescriptionEnglish</p>
        <br />
        <h4 class="card-title text-right persian">@business.TitlePersian</h4>
        <p class="card-text text-right persian">@business.DescriptionPersian</p>
        <p>
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-list-nested" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M4.5 11.5A.5.5 0 0 1 5 11h10a.5.5 0 0 1 0 1H5a.5.5 0 0 1-.5-.5zm-2-4A.5.5 0 0 1 3 7h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm-2-4A.5.5 0 0 1 1 3h10a.5.5 0 0 1 0 1H1a.5.5 0 0 1-.5-.5z" />
            </svg> <strong>@business.CategoryName</strong>
        </p>


        <p>
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-geo-alt-fill" viewBox="0 0 16 16">
                <path d="M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10zm0-7a3 3 0 1 1 0-6 3 3 0 0 1 0 6z" />
            </svg> <strong>@business.City, @business.State </strong>
        </p>
        @{ @if (business.Verified == true)
            {
<a asp-controller="Admin" asp-action="Verify"
   asp-route-id="@business.BusinessId" class="btn btn-success">Verified</a>}
else
{ <a asp-controller="Admin" asp-action="Verify"
     asp-route-id="@business.BusinessId" class="btn btn-danger">Unverified</a>} }

    </div>
</div>      }