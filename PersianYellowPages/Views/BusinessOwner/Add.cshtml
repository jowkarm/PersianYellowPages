@model Business
@{
    string title = ViewBag.Action + " Business";
    ViewBag.Title = title;
}

<h2>@ViewBag.Title</h2>

<form asp-action="Add" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="TitleEnglish">English Title</label>
        <input asp-for="TitleEnglish" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="TitlePersian">Persian Title</label>
        <input asp-for="TitlePersian" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="DescriptionEnglish">English Description</label>
        <textarea asp-for="DescriptionEnglish" class="form-control" rows="20" cols="50"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="DescriptionPersian">Persian Description</label>
        <textarea asp-for="DescriptionPersian" class="form-control" rows="20" cols="50"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="Phone1">Phone</label>
        <input asp-for="Phone1" class="form-control">
    </div>


    <div class="form-group">
        <label asp-for="Website">Website</label>
        <input asp-for="Website" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Categories.CategoryName">Category Name</label>
        <input asp-for="Categories.CategoryName" class="form-control">
    </div>

   
        <input type="hidden" asp-for="BusinessId" />








        <input type="hidden" asp-for="UserProfiles.UserEmail" value="@User.Identity.Name"  />
        <input type="hidden" asp-for="UserProfiles.UserDisplayName" value="@User.Claims.FirstOrDefault(x => x.Type.Equals("name")).Value"  />





        <div class="form-group">
            <label asp-for="Addresses.AddressLine1">Address Line 1</label>
            <input asp-for="Addresses.AddressLine1" class="form-control">
        </div>

        <div class="form-group">
            <label asp-for="Addresses.AddressLine2">Address Line 2</label>
            <input asp-for="Addresses.AddressLine2" class="form-control">
        </div>

        <div class="form-group">
            <label asp-for="Addresses.City">City</label>
            <input asp-for="Addresses.City" class="form-control">
        </div>

        <div class="form-group">
            <label asp-for="Addresses.State">State</label>
            <input asp-for="Addresses.State" class="form-control">
        </div>

        <div class="form-group">
            <label asp-for="Addresses.ZipCode">Zip Code</label>
            <input asp-for="Addresses.ZipCode" class="form-control">
        </div>

        <div class="form-group">
            <label asp-for="Addresses.GoogleMapLink">Google Map Link</label>
            <input asp-for="Addresses.GoogleMapLink" class="form-control">
        </div>




    <button type="submit" class="btn btn-primary" >@ViewBag.Action</button>
    <a asp-controller="BusinessOwner" asp-action="Index"
       class="btn btn-primary">Cancel</a>
</form>
